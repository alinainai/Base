<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:src="@mipmap/zhihu_tip_icon"
            app:layout_constraintBottom_toTopOf="@+id/guide"
            app:layout_constraintEnd_toEndOf="@+id/dialog_title"
            app:layout_constraintStart_toStartOf="@+id/dialog_title"
            android:contentDescription="@string/app_name" />
        <View
            android:id="@+id/guide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@+id/dialog_title"
            app:layout_constraintEnd_toEndOf="@+id/dialog_title"
            app:layout_constraintStart_toStartOf="@+id/dialog_title"

            />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="280dp"
            android:layout_height="350dp"
            android:background="@drawable/public_default_dialog_shape"
            android:paddingStart="15dp"
            android:paddingTop="60dp"
            android:paddingEnd="15dp"
            android:text="这个是忘记密码的提示"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_go_login"
            android:paddingStart="30dp"
            android:paddingRight="30dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/public_default_btn_selector_blue_corner"
            android:text="确定"
            android:textColor="@color/public_white"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_title"
            app:layout_constraintEnd_toEndOf="@+id/dialog_title"
            app:layout_constraintStart_toStartOf="@+id/dialog_title"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>