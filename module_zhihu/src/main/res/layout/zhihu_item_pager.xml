<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.base.baseui.view.SwipeMenuLayout
        android:id="@+id/event_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zhihu_paper_item_height"
        app:ios="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftSwipe="true"
        app:swipeEnable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/paperContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zhihu_paper_item_height"
            android:background="@color/public_white">

            <ImageView
                android:id="@+id/imgFileType"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/public_default_image_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/public_btn_default_selector"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="2"
                android:paddingStart="10dp"
                android:text="标题"
                android:textColor="@color/public_text_black_deep"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgFileType"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/itemMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/public_btn_default_selector"
                android:gravity="start"
                android:lines="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="厂站"
                android:textColor="@color/public_text_black_light"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/imgFileType"
                app:layout_constraintTop_toBottomOf="@+id/itemTitle" />

            <TextView
                android:id="@+id/itemVoltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/public_btn_default_selector"
                android:gravity="start"
                android:lines="1"
                android:text="电压等级"
                android:textColor="@color/public_text_black_light"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/itemMap" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnModify"
                android:layout_width="85dp"
                android:layout_height="@dimen/zhihu_paper_item_height"
                android:layout_marginEnd="4dp"
                android:background="#3F3424"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/public_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnDelete"
                android:layout_width="85dp"
                android:layout_height="@dimen/zhihu_paper_item_height"
                android:background="#ED4855"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/public_white"
                android:textSize="14sp" />
        </LinearLayout>

    </com.base.baseui.view.SwipeMenuLayout>
</androidx.constraintlayout.widget.ConstraintLayout>