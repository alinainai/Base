<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_white"
    tools:context=".ui.map.MapActivity">

    <com.base.baseui.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backHide="true"
        app:closeHide="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="搜索" />

    <LinearLayout
        android:id="@+id/ly_user_psw"
        android:background="@drawable/zhihu_search_line_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        app:layout_constraintTop_toBottomOf="@+id/title_view">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:hint="请按规则输入要搜索的地址"
            android:maxLength="18"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#e1e1e1"
            android:textSize="15sp" />

        <ImageView
            android:tint="#333333"
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:padding="4dp"
            android:src="@mipmap/lib_title_bar_close"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_tip_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="tips：请输入正确的匹配规则"
        android:textColor="@color/public_text_black_light"
        android:textSize="14sp"
       android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ly_user_psw"
        app:layout_constraintLeft_toLeftOf="parent" />



    <Button
        android:id="@+id/btn_go_login"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/public_default_btn_selector_blue_corner"
        android:text="开始搜索"
        android:textColor="@color/public_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_tip_info" />

    <TextView
        android:id="@+id/text_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="tips：请输入正确的匹配规则"
        android:textColor="@color/public_text_black_light"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ly_user_psw"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>