<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gas.zhihu">

    <application>
        <activity
            android:name=".ui.detial.DetailsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/zhihu_activity_details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/zhihu_activity_main"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.map.MapActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"
            />
        <activity android:name=".ui.login.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="fullSensor"
            />

        <!-- 在组件集成宿主时, 由于宿主已经声明了 CommonSDK 的公有 ConfigModule, 所以在这里只需要声明业务组件自己的 ConfigModule -->
        <meta-data
            android:name="com.gas.zhihu.app.GlobalConfiguration"
            android:value="ClientConfigModule"/>
    </application>

</manifest>