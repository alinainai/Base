<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_gas_bg"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gas_shape_dialog_bg"
        android:orientation="vertical"
        android:paddingTop="5dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_gas_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="@string/str_title"
            android:includeFontPadding="false"
            android:textColor="@color/c333333"
            android:textSize="@dimen/title_main_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_gas_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/str_message"
            android:textColor="@color/c333333"
            android:textSize="@dimen/title_right_text_size" />

        <FrameLayout
            style="@style/gas_dialog_divder_line"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_neg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gas_select_left_btn"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/str_negative"
                android:textColor="@color/c3c83e2"
                android:textSize="@dimen/title_right_text_size" />

            <FrameLayout
                android:id="@+id/img_line"
                style="@style/gas_dialog_divder_line_vertical" />

            <TextView
                android:id="@+id/btn_pos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gas_select_right_btn"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/str_positive"
                android:textColor="@color/c3c83e2"
                android:textSize="@dimen/title_right_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>