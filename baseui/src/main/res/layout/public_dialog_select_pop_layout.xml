<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.base.baseui.view.RecyclerViewWithMaxHeight
        android:background="@color/public_white"
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:maxHeight="280dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F9F9F9" />

    <TextView
        android:id="@+id/popTipView"
        android:gravity="end"
        android:textColor="@color/public_blue"
        android:textSize="@dimen/public_font_14sp"
        android:background="@color/public_white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="找不到？点击这里"
        android:padding="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/public_title_shape_shadow" />

</LinearLayout>