<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="public_app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/public_color_primary</item>
        <item name="colorPrimaryDark">@color/public_color_primary_dark</item>
        <item name="colorAccent">@color/public_color_accent</item>
        <item name="colorButtonNormal">#ff3e19</item>
        <item name="colorControlHighlight">#ff3e19</item>
        <item name="alertDialogTheme">@style/public_dialog_alert</item>
    </style>


    <!--设置dialogbutton颜色-->
    <style name="public_dialog_alert" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">#ff3e19</item>
    </style>

    <style name="public_app_theme_nostatusbar" parent="public_app_theme">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="public_style_tab_text_size">
        <item name="android:textSize">@dimen/public_tab_text_size</item>
    </style>


</resources>