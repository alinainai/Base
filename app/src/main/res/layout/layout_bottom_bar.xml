<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_radio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingTop="6dp">

    <RadioButton
        android:id="@+id/home_btn"
        style="@style/style_main_radio"
        android:drawableTop="@drawable/home_main_s"
        android:text="@string/home" />

    <RadioButton
        android:id="@+id/classify_btn"
        style="@style/style_main_radio"
        android:drawableTop="@drawable/home_goods_s"
        android:text="产品" />

    <RadioButton
        android:id="@+id/account_btn"
        style="@style/style_main_radio"
        android:drawableTop="@drawable/home_activity_s"
        android:text="信息" />

    <RadioButton
        android:id="@+id/shopping_btn"
        style="@style/style_main_radio"
        android:drawableTop="@drawable/home_service_s"
        android:text="我的" />
</RadioGroup>