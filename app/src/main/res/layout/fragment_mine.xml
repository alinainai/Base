<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#efefef"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:background="@color/c26c4e9">

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:src="@mipmap/ac_message" />

        <ImageView
            android:id="@+id/img_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_28"
            android:layout_toLeftOf="@+id/img_message"
            android:paddingLeft="@dimen/px_10"
            android:src="@mipmap/ac_set" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_158"
                android:background="@color/c26c4e9">

                <trunk.doi.base.view.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/px_115"
                    android:layout_height="@dimen/px_115"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_30"
                    android:src="@mipmap/user_icon"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/px_2" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_head"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="尛尛酥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_30" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginTop="@dimen/px_10"
                    android:layout_toRightOf="@+id/iv_head"
                    android:text="185****2340"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_30" />

                <TextView
                    android:id="@+id/tv_intent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_40"
                    android:layout_marginTop="@dimen/px_10"
                    android:drawablePadding="@dimen/px_15"
                    android:drawableTop="@mipmap/ac_invite"
                    android:text="邀请好友赚红包"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_24" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_189"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_total_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计收益（元）"
                        android:textColor="#999"
                        android:textSize="@dimen/px_24" />

                    <TextView
                        android:id="@+id/total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_10"
                        android:text="0.00"
                        android:textColor="#ff3e19"
                        android:textSize="@dimen/px_28"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="@dimen/px_66"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:id="@+id/ll_all_money"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px_189"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总资产（元）"
                        android:textColor="#999"
                        android:textSize="@dimen/px_24" />

                    <TextView
                        android:id="@+id/all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_10"
                        android:text="0.00"
                        android:textColor="#54adff"
                        android:textSize="@dimen/px_28"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tixian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_cash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_14"
                        android:text="提现"
                        android:textColor="#666"
                        android:textSize="@dimen/px_34" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="@dimen/px_36"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:id="@+id/ll_chongzhi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_charge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_14"
                        android:text="充值"
                        android:textColor="#ff3e19"
                        android:textSize="@dimen/px_34" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="#fff"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_marginLeft="@dimen/px_40"
                    android:layout_marginRight="@dimen/px_40"
                    android:background="#e5e5e5" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_68"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户余额："
                    android:textColor="#999"
                    android:textSize="@dimen/px_24" />

                <TextView
                    android:id="@+id/all_have"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#333"
                    android:textSize="@dimen/px_24"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#999"
                    android:textSize="@dimen/px_24" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:layout_marginTop="@dimen/px_20"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_lend"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_mylend" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="我的出借"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />

                    <TextView
                        android:id="@+id/tv_lend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(5个)"
                        android:textColor="#333"
                        android:textSize="@dimen/px_24" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:id="@+id/ll_zqzr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_trans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="债权转让"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_box"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_mybox" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="我的宝箱"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />

                    <TextView
                        android:id="@+id/tv_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(6个)"
                        android:textColor="#333"
                        android:textSize="@dimen/px_24" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:id="@+id/ll_guandou"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_bean" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="冠豆"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:layout_marginTop="@dimen/px_20"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_wdtyj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_taste_money" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="我的体验金"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:id="@+id/ll_safe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_bank_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="银行卡管理"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_jyjl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_transaction_record" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="交易记录"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:id="@+id/ll_fxpc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/px_30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ac_risk_test" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_15"
                        android:text="风险评测"
                        android:textColor="#333"
                        android:textSize="@dimen/px_30" />

                    <TextView
                        android:id="@+id/riskname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#999"
                        android:textSize="@dimen/px_24" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>