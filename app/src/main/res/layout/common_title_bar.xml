<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ry_title_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/title_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:drawableStart="@mipmap/titlebar_back_icon"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_bar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/title_color"
            android:textSize="@dimen/title_size" />
            <TextView
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/title_bar_edt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:minWidth="50dp"
                android:textColor="@color/title_right_color"
                android:textSize="@dimen/title_right_size" />
    </RelativeLayout>

    <View
        android:id="@+id/v_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#e3e3e3" />
</LinearLayout>