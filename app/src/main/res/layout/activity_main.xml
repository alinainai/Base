<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <FrameLayout
        android:clipToPadding="true"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="42dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="6dp">

        <Button
            android:id="@+id/home_btn"
            style="@style/style_main_radio"
            android:drawableTop="@drawable/home_main_s"
            android:text="@string/app_str_home_title" />

        <Button
            android:id="@+id/classify_btn"
            style="@style/style_main_radio"
            android:drawableTop="@drawable/home_goods_s"
            android:text="@string/app_str_product_title" />

        <Button
            android:id="@+id/account_btn"
            style="@style/style_main_radio"
            android:drawableTop="@drawable/home_activity_s"
            android:text="@string/app_str_info_title" />

        <Button
            android:id="@+id/shopping_btn"
            style="@style/style_main_radio"
            android:drawableTop="@drawable/home_service_s"
            android:text="@string/app_str_account_title" />
    </LinearLayout>
</RelativeLayout>