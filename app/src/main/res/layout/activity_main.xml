<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <FrameLayout
        android:clipToPadding="true"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="42dp"
        />

    <RadioGroup
        android:paddingTop="6dp"
        android:paddingBottom="3dp"
        android:id="@+id/rg_radio"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:id="@+id/home_btn"
            android:drawableTop="@drawable/home_main_s"
            style="@style/style_main_radio"
            android:text="@string/home" />

        <RadioButton
            android:id="@+id/classify_btn"
            android:drawableTop="@drawable/home_goods_s"
            style="@style/style_main_radio"
            android:text="产品" />

        <RadioButton
            android:id="@+id/account_btn"
            android:drawableTop="@drawable/home_activity_s"
            android:text="信息"
            style="@style/style_main_radio" />

        <RadioButton
            android:id="@+id/shopping_btn"
            style="@style/style_main_radio"
            android:drawableTop="@drawable/home_service_s"
            android:text="我的" />
    </RadioGroup>
</RelativeLayout>