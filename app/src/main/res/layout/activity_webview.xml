<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:background="@color/c26c4e9"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/px_76"
            android:layout_height="@dimen/px_76"
            android:layout_marginLeft="@dimen/px_8"
            android:background="@drawable/selector_title"
            android:scaleType="centerInside"
            android:src="@mipmap/close" />

        <TextView
            android:id="@+id/main_cart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:layout_marginRight="@dimen/px_10"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="加载中"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_36_px" />

        <ImageView
            android:id="@+id/img_refresh"
            android:layout_width="@dimen/px_76"
            android:layout_height="@dimen/px_76"
            android:background="@drawable/selector_title"
            android:layout_marginRight="@dimen/px_8"
            android:scaleType="centerInside"
            android:src="@mipmap/refresh" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_states" />
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    

</LinearLayout>
