<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    >
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gank_item_icon"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/user_icon"
            />
        <TextView
            android:id="@+id/gank_item_desc"
            android:layout_alignTop="@+id/gank_item_icon"
            android:layout_toEndOf="@id/gank_item_icon"
            android:layout_marginStart="10dp"
            android:text="content"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_26_px" />

        <TextView
            android:layout_alignBottom="@+id/gank_item_icon"
            android:layout_toEndOf="@id/gank_item_icon"
            android:layout_marginStart="10dp"
            android:id="@+id/gank_item_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daimajia"
            android:textColor="@color/c666666"
            android:textSize="@dimen/text_size_22_px" />

        <ImageView
            android:id="@+id/img_user_icon"
            android:layout_alignBottom="@+id/gank_item_icon"
            android:layout_alignParentEnd="true"
            android:scaleType="center"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@mipmap/user_icon" />
        <TextView
            android:layout_marginEnd="5dp"
            android:layout_alignBottom="@+id/img_user_icon"
            android:layout_toLeftOf="@+id/img_user_icon"
            android:text="author"
            android:id="@+id/gank_item_publishedat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c666666"
            android:textSize="@dimen/text_size_22_px" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
