<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_shadow_t"
    android:paddingStart="16dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/gank_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:lines="3"
        android:text="@string/str_content"
        android:textColor="@color/c333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gank_item_who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/str_platform"
        android:textColor="@color/c999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gank_item_desc" />

    <TextView
        android:id="@+id/gank_item_publishedat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_author"
        android:textColor="@color/c999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gank_item_who" />

</androidx.constraintlayout.widget.ConstraintLayout>


