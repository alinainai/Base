<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_item_shape_layout"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_210"
        android:layout_margin="@dimen/px_10"
        android:src="@mipmap/loading_image"
        android:scaleType="centerCrop"
         />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginTop="@dimen/px_18"
        android:padding="@dimen/px_10"
        android:singleLine="false"
        android:maxLines="2"
        android:ellipsize="end"
        android:lines="2"
        android:text="东方雨虹防水"
        android:textColor="@color/base_text_color"
        android:textSize="@dimen/font_size_32" />

    <View style="@style/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10" >

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="¥ 658.00"
            android:textColor="@color/money_color"
            android:textSize="@dimen/font_size_32" />

        <TextView
            android:id="@+id/item_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/px_10"
            android:text="已售224件"
            android:textColor="@color/base_text_info_color"
            android:textSize="@dimen/font_size_26" />

        <ImageView
            android:id="@+id/item_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/px_10"
            android:src="@drawable/collect_selector" />
    </RelativeLayout>
</LinearLayout>