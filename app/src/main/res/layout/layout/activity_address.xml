<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical"
    tools:context=".ui.activity.address.AddressActivity">

    <include layout="@layout/default_main_cart_title" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/px_10"
        android:id="@+id/type_item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <Button
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_base"
        android:gravity="center"
        android:id="@+id/btn_add_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:textSize="@dimen/font_size_32"
        android:textColor="@color/white"
        android:text="添加收货地址"/>



</LinearLayout>
