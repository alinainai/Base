<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/px_4"
    android:padding="@dimen/px_8"
    android:background="#fff"
    >

    <ImageView
        android:transitionName="share"
        android:id="@+id/img_goods"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_200"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:text="名称" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_price_a"
            android:text="￥0"
            android:textSize="@dimen/px_24"
            android:textColor="@color/cff5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_price_b"
            android:layout_weight="1"
            android:text=".00"
            android:textSize="@dimen/px_20"
            android:textColor="@color/cff5000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_pay_count"
            android:text="0人付款"
            android:layout_marginRight="@dimen/px_8"
            android:textSize="@dimen/px_20"
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginRight="@dimen/px_8"
            android:text="```"
            android:textSize="@dimen/px_20"
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


</LinearLayout>