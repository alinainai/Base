<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/back_nav"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <anjuyi.cc.edeco.view.CircleImageView
        android:id="@+id/mine_user_icon_img"
        android:layout_width="@dimen/px_160"
        android:layout_height="@dimen/px_160"
        android:layout_marginStart="@dimen/px_30"
        android:src="@mipmap/user_icon"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp" />

    <TextView
        android:layout_marginRight="@dimen/px_30"
        android:text="距离和时间从来都不是感情的决定因素，真正能决定的惟有两个人的心。——《听见涛声》"
        android:textColor="@color/white"
        android:id="@+id/nav_head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="14sp" />

</LinearLayout>