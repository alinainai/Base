<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <anjuyi.cc.edeco.view.Lock9View
        android:id="@+id/lock_9_view"
        android:layout_width="@dimen/px_524"
        android:layout_height="@dimen/px_524"
        android:layout_centerInParent="true"
        app:lineColor="#0c9ee3"
        app:lineWidth="@dimen/px_4"
        app:nodeOnSrc="@drawable/select"
        app:nodeSrc="@drawable/normal" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_138"
        android:minWidth="@dimen/px_100"
        android:text=""
        android:textColor="#8d8d8d"
        android:textSize="@dimen/text_size_40_px" />

    <TextView
        android:id="@+id/tv_lock_Remind_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_40"
        android:text=""
        android:textColor="#0c9ee3"
        android:textSize="@dimen/text_size_30_px" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="忘记手势密码"
        android:textColor="#8d8d8d"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_lock_Remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_208"
        android:text="为了您的账户安全，请您设置手势密码"
        android:textColor="#8d8d8d"
        android:textSize="16sp" />

</RelativeLayout>