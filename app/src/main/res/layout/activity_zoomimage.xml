<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
    <anjuyi.cc.edeco.view.ZoomViewPager
        android:id="@+id/zoomViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96"
        android:background="@color/trans"
        android:padding="0dp" >
        <TextView
            android:id="@+id/main_cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_38" />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_10"
            android:visibility="visible" >

            <ImageView
                android:scaleType="center"
                android:id="@+id/img_back"
                android:layout_width="@dimen/px_96"
                android:layout_height="@dimen/px_96"
                android:src="@mipmap/nav_back" />
        </LinearLayout>

    </RelativeLayout>



    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:padding="@dimen/px_10"
        android:text="分享"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_30"
        android:background="@color/alpha_color"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_32" />
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_30"
        android:padding="@dimen/px_10"
        android:text="保存"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_30"
        android:background="@color/alpha_color"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_32" />

</RelativeLayout>