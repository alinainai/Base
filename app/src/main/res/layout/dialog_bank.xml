<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="@dimen/px_580"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/px_580"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="@dimen/px_30">

            <ImageView
                android:id="@+id/img_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_39"
                android:src="@mipmap/user_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px_60"
                android:layout_weight="1"
                android:gravity="center"
                android:text="恒丰银行资金存管"
                android:textColor="#333"
                android:textSize="@dimen/px_34"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_32"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="个人独立存管账户"
                    android:textColor="#999"
                    android:textSize="@dimen/px_24" />

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/px_1"
                    android:layout_height="@dimen/px_18"
                    android:background="#e5e5e5"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="用户资金安全透明"
                    android:textColor="#999"
                    android:textSize="@dimen/px_24" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_open"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_70"
                android:layout_marginBottom="@dimen/px_27"
                android:layout_marginTop="@dimen/px_57"
                android:background="@drawable/layout_selector_bg"
                android:gravity="center"
                android:text="开通恒丰存管账户"
                android:textColor="#000" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_58"
            android:src="@mipmap/close" />
    </LinearLayout>


</LinearLayout>