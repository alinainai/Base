<resources>




    <!-- 首页radio_button的格式 -->
    <style name="style_main_radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/bottom_text_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:gravity">center</item>
    </style>



    <!--通用分割线-->
    <style name="divider_wrap" parent="android:Widget">
        <item name="android:background">@color/public_divider_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1px</item>
    </style>





</resources>
