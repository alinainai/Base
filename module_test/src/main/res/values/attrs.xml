<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="LineChartView" tools:ignore="ResourceName">
        <attr name="horizontal_grid_step" format="integer" min="0" />
        <attr name="vertical_grid_step" format="integer" min="0" />
        <attr name="horizontal_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid_sublines_count" format="integer" min="0" />
        <attr name="vertical_grid" format="boolean" />
        <attr name="vertical_grid_sublines" format="boolean" />
        <attr name="horizontal_grid" format="boolean" />
        <attr name="horizontal_grid_sublines" format="boolean" />
        <attr name="horizontal_grid_color" format="color" />
        <attr name="vertical_grid_color" format="color" />
        <attr name="horizontal_grid_sublines_color" format="color" />
        <attr name="vertical_grid_sublines_color" format="color" />
        <attr name="horizontal_grid_thikness" format="dimension" />
        <attr name="vertical_grid_thikness" format="dimension" />
        <attr name="horizontal_grid_sublines_thikness" format="dimension" />
        <attr name="vertical_grid_sublines_thikness" format="dimension" />
        <attr name="horizontal_values" format="boolean" />
        <attr name="vertical_values" format="boolean" />
        <attr name="horizontal_values_color" format="color" />
        <attr name="vertical_values_color" format="color" />
        <attr name="horizontal_values_size" format="dimension" />
        <attr name="vertical_values_size" format="dimension" />
    </declare-styleable>

    <!--优惠倒计时器 -->
    <declare-styleable name="TimeDownView" tools:ignore="ResourceName">

        <attr name="timeZoneBackground" format="reference|color" />
        <attr name="timeZoneTextColor" format="color|reference" />
        <attr name="timeZoneTextSize" format="dimension"/>
        <attr name="timeTitleText" format="string"/>
        <attr name="timeDayUnit" format="string"/>

    </declare-styleable>

    <declare-styleable name="AnimLineChartView" tools:ignore="ResourceName">
        <attr name="circleWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AnimPieChartView" tools:ignore="ResourceName">
        <attr name="pieCircleWidth" format="dimension"/>
        <attr name="bgInnerCircleWidth" format="dimension"/>
    </declare-styleable>

    <!-- xy坐标轴颜色 -->
    <attr name="xy_line_color" format="color" />
    <!-- xy坐标轴宽度 -->
    <attr name="xy_line_width" format="dimension" />
    <!-- xy坐标轴文字颜色 -->
    <attr name="xy_text_color" format="color" />
    <!-- xy坐标轴文字大小 -->
    <attr name="xy_text_size" format="dimension" />
    <!-- 折线图中折线的颜色 -->
    <attr name="line_color" format="color" />
    <!-- x轴各个坐标点水平间距 -->
    <attr name="interval" format="dimension" />
    <!-- 背景颜色 -->
    <attr name="bg_color" format="color" />
    <!-- 曲线选中外部颜色 -->
    <attr name="select_circle_color" format="color" />
    <!-- 曲线选中内部颜色 -->
    <attr name="select_reminder_color" format="color" />
    <!--是否抬手滚动-->
    <attr name="isScroll" format="boolean" />
    <declare-styleable name="ChartView">
        <attr name="xy_line_color" />
        <attr name="xy_line_width" />
        <attr name="xy_text_color" />
        <attr name="xy_text_size" />
        <attr name="line_color" />
        <attr name="interval" />
        <attr name="bg_color" />
        <attr name="select_circle_color" />
        <attr name="select_reminder_color" />
        <attr name="isScroll" />
        <!--提示框跟滑动显示的位置-->
        <attr name="show_position">
            <enum name="first" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LineChart">
        <attr name="lineGradutionTextSize" format="dimension" />
        <attr name="lineGradutaionColor" format="color" />
        <attr name="lineTitleColor" format="color" />
        <attr name="lineTitleTextSize" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineGradutaionWidth" format="dimension" />
        <attr name="linedensity" format="integer" />
        <attr name="lineMin" format="float" />
        <attr name="lineMax" format="float" />
        <attr name="showAnimation" format="boolean" />
        <attr name="animationduration" format="integer" />
        <attr name="circleClickOffset" format="dimension" />
        <attr name="allowScroll" format="boolean" />
        <attr name="maxColnum" format="integer" />
    </declare-styleable>

    <declare-styleable name="QMUITextAppearance">
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="android:textColorHint"/>
        <attr name="android:textStyle"/>
        <attr name="android:typeface"/>
        <attr name="textAllCaps"/>
        <attr name="android:shadowColor"/>
        <attr name="android:shadowDy"/>
        <attr name="android:shadowDx"/>
        <attr name="android:shadowRadius"/>
    </declare-styleable>

    <attr name="QMUITabSegmentStyle" format="reference"/>

    <declare-styleable name="QMUITabSegment">
        <attr name="qmui_tab_indicator_height" format="dimension"/>
        <attr name="qmui_tab_has_indicator" format="boolean"/>
        <attr name="qmui_tab_indicator_top" format="boolean"/>
        <attr name="qmui_tab_indicator_with_follow_content" format="boolean"/>
        <attr name="android:textSize"/>
        <attr name="qmui_tab_normal_text_size" format="dimension"/>
        <attr name="qmui_tab_selected_text_size" format="dimension"/>
        <attr name="qmui_tab_mode" format="enum">
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>
        <attr name="qmui_tab_space" format="dimension"/>
        <attr name="qmui_tab_icon_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="qmui_tab_select_no_animation" format="boolean" />
    </declare-styleable>

    <attr name="qmui_skin_support_tab_normal_color" format="color|reference"/>
    <attr name="qmui_skin_support_tab_selected_color" format="color|reference"/>

</resources>